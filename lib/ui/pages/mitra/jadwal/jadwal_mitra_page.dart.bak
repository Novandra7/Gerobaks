class _JadwalMit    final screenWidth = MediaQuery.of(context).size.width;
    final basePadding = screenWidth / 25;
    final spacingSmall = basePadding / 1.618;
    final spacingMedium = basePadding;
    final cardRadius = basePadding * 0.8; // Border radius proporsional
