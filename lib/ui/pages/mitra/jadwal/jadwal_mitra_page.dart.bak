  Widget _buildFilterTab(String label, bool isSelected, VoidCallback onTap, bool isSmallScreen) {
    // Menghitung ukuran berdasarkan golden ratio dan responsif
    final screenWidth = MediaQuery.of(context).size.width;
    final basePadding = screenWidth / 25;
    final verticalPadding = basePadding * 0.38; // Proportional padding
    final fontSize = basePadding * (isSmallScreen ? 0.55 : 0.65);
    final borderRadius = basePadding * 0.4;
    
    return GestureDetector(
      onTap: onTap,
      child: Container(
        padding: EdgeInsets.symmetric(vertical: verticalPadding),
        decoration: BoxDecoration(
          color: isSelected ? greenColor : Color(0xFFEAFBEF),
          borderRadius: BorderRadius.circular(borderRadius),
          boxShadow: isSelected ? [
            BoxShadow(
              color: greenColor.withOpacity(0.2),
              blurRadius: 4,
              offset: Offset(0, 1),
            ),
          ] : [],
        ),
        alignment: Alignment.center,
        child: Text(
          label,
          style: (isSelected ? whiteTextStyle : greenTextStyle).copyWith(
            fontSize: fontSize,
            fontWeight: isSelected ? semiBold : medium,
          ),
          textAlign: TextAlign.center,
        ),
      ),
    );
  }
  
