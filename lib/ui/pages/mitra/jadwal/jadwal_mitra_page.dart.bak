  Widget _buildStatCard({
    required IconData icon,
    required String label,
    required int count,
    required bool isSmallScreen,
    required double basePadding,
  }) {
    // Menggunakan proporsi golden ratio untuk ukuran elemen
    final cardHeight = basePadding * 5.2; // Tinggi card dengan golden ratio
    final iconSize = basePadding * 1.2;
    final countTextSize = basePadding * (isSmallScreen ? 0.9 : 1);
    final labelTextSize = basePadding * (isSmallScreen ? 0.55 : 0.65);
    final spacing = basePadding * 0.4;
    
    return Container(
      height: cardHeight,
      decoration: BoxDecoration(
        color: Colors.white.withOpacity(0.2),
        borderRadius: BorderRadius.circular(basePadding * 0.8),
        boxShadow: [
          BoxShadow(
            color: Colors.black.withOpacity(0.05),
            blurRadius: basePadding * 0.4,
            offset: Offset(0, basePadding * 0.1),
          ),
        ],
      ),
      padding: EdgeInsets.all(basePadding * 0.6),
      child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Icon(
            icon,
            color: Colors.white,
            size: iconSize,
          ),
          SizedBox(height: spacing),
          Text(
            count.toString(),
            style: whiteTextStyle.copyWith(
              fontSize: countTextSize,
              fontWeight: FontWeight.bold,
            ),
          ),
          SizedBox(height: spacing * 0.5),
          Text(
            label,
            style: whiteTextStyle.copyWith(
              fontSize: labelTextSize,
            ),
            textAlign: TextAlign.center,
          ),
        ],
      ),
    );
  }
  
