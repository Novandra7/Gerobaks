{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Flutter App",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--verbose"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			},
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Flutter: Clean",
			"type": "shell",
			"command": "flutter",
			"args": [
				"clean"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Flutter: Pub Get",
			"type": "shell",
			"command": "flutter",
			"args": [
				"pub",
				"get"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Run Flutter App",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--enable-software-rendering",
				"--dart-flags=--no-disable-service-port-fallback",
				"--no-dds"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Flutter: Pub Get",
			"type": "shell",
			"command": "flutter",
			"args": [
				"pub",
				"get"
			]
		},
		{
			"label": "Backend: Serve",
			"type": "shell",
			"command": "php",
			"args": [
				"artisan",
				"serve"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "shared"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "Backend: Migrate",
			"type": "shell",
			"command": "php",
			"args": [
				"artisan",
				"migrate"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "Backend: Fresh Seed",
			"type": "shell",
			"command": "php",
			"args": [
				"artisan",
				"migrate:fresh",
				"--seed"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "Laravel Server - SQLite",
			"type": "shell",
			"command": "php",
			"args": [
				"-S",
				"localhost:8001",
				"-t",
				"backend/public"
			],
			"isBackground": true,
			"problemMatcher": []
		}
	]
}